<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarslineApp.Views.ListaUsuariosPage"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
             Title="Lista de Usuarios">

    <Grid RowDefinitions="Auto,*,Auto" Padding="20">

        <Frame Grid.Row="0" BackgroundColor="#512BD4" Padding="20" HasShadow="True" Margin="0,0,0,20">
            <Label Text="USUARIOS REGISTRADOS"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"/>
        </Frame>

        <RefreshView Grid.Row="1" IsRefreshing="{Binding IsLoading}" Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding Usuarios}">
                <CollectionView.EmptyView>
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
                        <Label Text="No hay usuarios registrados"
                               FontSize="16"
                               TextColor="#404040"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="White" Padding="15" Margin="0,5" HasShadow="True">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="{Binding NombreCompleto}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="Black"/>
                                <Label TextColor="#404040" FontSize="14">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="Usuario: " FontAttributes="Bold"/>
                                            <Span Text="{Binding NombreUsuario}"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Label Text="{Binding NombreRol}"
                                       TextColor="#512BD4"
                                       FontSize="12"
                                       FontAttributes="Bold"/>
                                <Label Text="{Binding FechaCreacion, StringFormat='Creado: {0:dd/MM/yyyy}'}"
                                       FontSize="11"
                                       TextColor="#6E6E6E"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <Button Grid.Row="2"
                Text="VOLVER"
                Command="{Binding VolverCommand}"
                BackgroundColor="#512BD4"
                TextColor="White"
                FontAttributes="Bold"
                HeightRequest="50"
                Margin="0,20,0,0"/>

    </Grid>

</ContentPage>