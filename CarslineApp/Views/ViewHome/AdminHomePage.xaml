<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="CarslineApp.Views.AdminHomePage"
            x:Name="RootPage"
            Shell.NavBarIsVisible="False"
            NavigationPage.HasNavigationBar="False"
            xmlns:converters="clr-namespace:CarslineApp.Converters">
    <FlyoutPage.Resources>
        <ResourceDictionary>
            <converters:StringNotEmptyConverter x:Key="StringNotEmptyConverter"/>
        </ResourceDictionary>
    </FlyoutPage.Resources>

    <!-- ================== MENÃš LATERAL ================== -->
    <FlyoutPage.Flyout>
        <ContentPage Title="MenÃº" BackgroundColor="#1E1E1E">
            <ScrollView>
                <VerticalStackLayout Padding="0" Spacing="0">
                    <!-- HEADER DEL MENÃš -->
                    <Frame BackgroundColor="#D60000" Padding="20,30,20,25" Margin="0" CornerRadius="0" HasShadow="False">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="ðŸ‘¨â€ðŸ’¼" FontSize="48" HorizontalOptions="Center"/>
                            <Label Text="Administrador"
                                   FontSize="22"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   HorizontalOptions="Center"/>
                            <Label Text="{Binding NombreUsuarioActual}"
                                   FontSize="15"
                                   TextColor="#FFCCCC"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- SECCIÃ“N DE NAVEGACIÃ“N -->
                    <VerticalStackLayout Padding="15,20" Spacing="8">
                        <Label Text="OPCIONES" 
                               FontSize="12" 
                               TextColor="#888" 
                               FontAttributes="Bold"
                               Margin="10,0,0,10"/>

                        <!-- VER USUARIOS -->
                        <Frame Padding="0" 
                               Margin="0,0,0,8" 
                               CornerRadius="12" 
                               HasShadow="False"
                               BackgroundColor="#404040">
                            <Button Text="ðŸ‘¥ Ver Usuarios"
                                    Command="{Binding VerUsuariosCommand}"
                                    BackgroundColor="Transparent"
                                    TextColor="White"
                                    FontSize="16"
                                    FontAttributes="Bold"
                                    HorizontalOptions="FillAndExpand"
                                    HeightRequest="55"
                                    Padding="15,0"/>
                        </Frame>

                        <!-- INVENTARIO -->
                        <Frame Padding="0" 
                               Margin="0,0,0,8" 
                               CornerRadius="12" 
                               HasShadow="False"
                               BackgroundColor="#404040">
                            <Button Text="ðŸ“¦ Inventario"
                                    Command="{Binding VerInventarioCommand}"
                                    BackgroundColor="Transparent"
                                    TextColor="White"
                                    FontSize="16"
                                    FontAttributes="Bold"
                                    HorizontalOptions="FillAndExpand"
                                    HeightRequest="55"
                                    Padding="15,0"/>
                        </Frame>
                        <!-- SEPARADOR -->
                        <BoxView HeightRequest="1" BackgroundColor="#333" Margin="20,10"/>


                        <Frame Padding="0"
                           Margin="0,0,0,20"
                           CornerRadius="12"
                           HasShadow="False"
                           BackgroundColor="#404040">

                            <Grid HeightRequest="55"
                                  Padding="15,0"
                                  ColumnDefinitions="50,*">

                                <!-- ICONO -->
                                <ImageButton Grid.Column="0"
                                     BackgroundColor="Transparent"
                                     Command="{Binding LogoutCommand}"
                                     Source="cerrarsesion.png"
                                     WidthRequest="50"
                                     HeightRequest="50"                             
                                     VerticalOptions="Center"/>

                                <!-- TEXTO -->
                                <Button Grid.Column="1"
                                        Text="Cerrar SesiÃ³n"
                                        Command="{Binding LogoutCommand}"
                                        BackgroundColor="#404040"
                                        TextColor="White"
                                        FontSize="16"
                                        FontAttributes="Bold"
                                        HorizontalOptions="FillAndExpand"/>
                            </Grid>
                        </Frame>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </ScrollView>
        </ContentPage>
    </FlyoutPage.Flyout>

    <!-- ================== CONTENIDO PRINCIPAL ================== -->
    <FlyoutPage.Detail>
        <NavigationPage BarBackgroundColor="#D60000" BarTextColor="White" Shell.NavBarIsVisible="False">
            <x:Arguments>
                <ContentPage Title="Panel Administrador" x:Name="DetailPage">
                    <Grid RowDefinitions="Auto,*" BackgroundColor="#F5F5F5">

                        <!-- HEADER -->
                        <Frame Grid.Row="0" BackgroundColor="#D60000" Padding="10,10" Margin="0" CornerRadius="0" HasShadow="True">
                            <Grid ColumnDefinitions="Auto,*">
                                <ImageButton Grid.Column="0"
                                         Clicked="OnMenuButtonClicked"
                                         Source="menu.png"
                                         BackgroundColor="Transparent"
                                         WidthRequest="55"
                                         HeightRequest="55"
                                         HorizontalOptions="Start"
                                         VerticalOptions="Center"/>
                                <Label Grid.Column="1" 
                                       Text="CREAR USUARIO"
                                       FontSize="23" 
                                       FontAttributes="Bold"
                                       TextColor="White" 
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Grid>
                        </Frame>

                        <!-- CONTENIDO PRINCIPAL -->
                        <ScrollView Grid.Row="1">
                            <VerticalStackLayout Padding="20" Spacing="20">

                                <!-- FORMULARIO DE CREACIÃ“N -->
                                <Frame BackgroundColor="White" Padding="20" Margin="0,10" HasShadow="True" CornerRadius="15">
                                    <VerticalStackLayout Spacing="15">

                                        <Label Text="Nuevo Usuario"
                                               FontSize="20"
                                               FontAttributes="Bold"
                                               TextColor="#D60000"
                                               HorizontalOptions="Center"
                                               Margin="0,0,0,10"/>

                                        <!-- Nombre Completo -->
                                        <VerticalStackLayout Spacing="5">
                                            <Label Text="Nombre Completo"
                                                   FontSize="14"
                                                   FontAttributes="Bold"
                                                   TextColor="#404040"/>
                                            <Frame BorderColor="#D60000" 
                                                   Padding="0" 
                                                   HasShadow="False" 
                                                   CornerRadius="8">
                                                <Entry Text="{Binding NuevoNombreCompleto}"
                                                       Placeholder="Ej: Juan PÃ©rez GarcÃ­a"
                                                       BackgroundColor="White"
                                                       TextColor="Black"
                                                       PlaceholderColor="#919191"
                                                       HeightRequest="45"/>
                                            </Frame>
                                        </VerticalStackLayout>

                                        <!-- Nombre de Usuario -->
                                        <VerticalStackLayout Spacing="5">
                                            <Label Text="Nombre de Usuario"
                                                   FontSize="14"
                                                   FontAttributes="Bold"
                                                   TextColor="#404040"/>
                                            <Frame BorderColor="#D60000" 
                                                   Padding="0" 
                                                   HasShadow="False" 
                                                   CornerRadius="8">
                                                <Entry Text="{Binding NuevoNombreUsuario}"
                                                       Placeholder="Ej: jperez"
                                                       BackgroundColor="White"
                                                       TextColor="Black"
                                                       PlaceholderColor="#919191"
                                                       HeightRequest="45"/>
                                            </Frame>
                                        </VerticalStackLayout>

                                        <!-- ContraseÃ±a -->
                                        <VerticalStackLayout Spacing="5">
                                            <Label Text="ContraseÃ±a"
                                                   FontSize="14"
                                                   FontAttributes="Bold"
                                                   TextColor="#404040"/>
                                            <Frame BorderColor="#D60000" 
                                                   Padding="0" 
                                                   HasShadow="False" 
                                                   CornerRadius="8">
                                                <Entry Text="{Binding NuevaPassword}"
                                                       Placeholder="MÃ­nimo 8 caracteres"                                                 
                                                       MaxLength="12"
                                                       IsPassword="True"
                                                       BackgroundColor="White"
                                                       TextColor="Black"
                                                       PlaceholderColor="#919191"
                                                       HeightRequest="45"/>
                                            </Frame>
                                        </VerticalStackLayout>

                                        <!-- Tipo de Usuario -->
                                        <VerticalStackLayout Spacing="5">
                                            <Label Text="Tipo de Usuario"
                                                   FontSize="14"
                                                   FontAttributes="Bold"
                                                   TextColor="#404040"/>
                                            <Frame BorderColor="#D60000" 
                                                   Padding="0" 
                                                   HasShadow="False" 
                                                   BackgroundColor="White"
                                                   CornerRadius="8">
                                                <Picker ItemsSource="{Binding RolesDisponibles}"
                                                        ItemDisplayBinding="{Binding NombreRol}"
                                                        SelectedItem="{Binding RolSeleccionado}"
                                                        Title="Selecciona un tipo"
                                                        BackgroundColor="White"
                                                        TextColor="Black"
                                                        HeightRequest="45"/>
                                            </Frame>
                                        </VerticalStackLayout>

                                        <!-- Mensajes -->
                                        <Label Text="{Binding ErrorMessage}"
                                               TextColor="Red"
                                               FontSize="13"
                                               FontAttributes="Bold"
                                               IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}"
                                               HorizontalOptions="Center"
                                               Margin="0,5,0,0"/>

                                        <Label Text="{Binding SuccessMessage}"
                                               TextColor="Green"
                                               FontSize="13"
                                               FontAttributes="Bold"
                                               IsVisible="{Binding SuccessMessage, Converter={StaticResource StringNotEmptyConverter}}"
                                               HorizontalOptions="Center"
                                               Margin="0,5,0,0"/>

                                        <!-- BotÃ³n Crear -->
                                        <Button Text="âœ… CREAR USUARIO"
                                                Command="{Binding CrearUsuarioCommand}"
                                                BackgroundColor="#D60000"
                                                TextColor="White"
                                                FontAttributes="Bold"
                                                FontSize="16"
                                                HeightRequest="55"
                                                CornerRadius="10"
                                                Margin="0,15,0,0"/>

                                        <!-- Loading Indicator -->
                                        <ActivityIndicator IsRunning="{Binding IsLoading}"
                                                           IsVisible="{Binding IsLoading}"
                                                           Color="#D60000"
                                                           HorizontalOptions="Center"
                                                           Margin="0,10,0,0"/>

                                    </VerticalStackLayout>
                                </Frame>

                            </VerticalStackLayout>
                        </ScrollView>

                    </Grid>
                </ContentPage>
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>