                                        AutoSize="TextChanges"
                                        HeightRequest="120" />
                        </Border>

                    </VerticalStackLayout>
                </Frame>
                
                <!--Componetes Remplazados del Vehiculo-->
                <Frame Padding="10"
                   BackgroundColor="White"
                   CornerRadius="10">

                    <VerticalStackLayout Spacing="10">

                        <!-- TÍTULO -->
                        <Label Text="Componetes Reemplazados al Vehiculo"
                           FontSize="15"
                           HorizontalOptions="Center"
                           FontAttributes="Bold"/>

                        <!-- ENCABEZADOS -->
                        <Grid ColumnDefinitions="*,*,*" VerticalOptions="Center" >

                            <Label Grid.Column="1"
                               Text="Reemplazado"
                               TextColor="Green"
                               HorizontalTextAlignment="Center"
                               FontSize="12"/>

                            <Label Grid.Column="2"
                               Text="No Aplica"
                               TextColor="Red"
                               HorizontalTextAlignment="Center"
                               FontSize="12"/>
                        </Grid>

                        <!--Pregunta-->
                        <Grid ColumnDefinitions="*,*,*" VerticalOptions="Center" >

                            <Label Grid.Column="0"
                               Text="Aceite de Motor"
                               TextColor="Black"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"
                               FontSize="12"/>

                            <RadioButton Grid.Column="1"
                                 GroupName="ReemplazoAceiteMotor"
                                 Value="true"
                                 CheckedChanged="Radio_CheckedChanged"
                                 HorizontalOptions="Center"/>

                            <RadioButton Grid.Column="2"
                                 Value="false"
                                 GroupName="ReemplazoAceiteMotor"
                                 CheckedChanged="Radio_CheckedChanged"
                                 HorizontalOptions="Center"/>

                        </Grid>

                        <Grid ColumnDefinitions="*,*,*" VerticalOptions="Center" >

                            <Label Grid.Column="0"
                               Text="Filtro de Aceite"
                               TextColor="Black"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"
                               FontSize="12"/>

                            <RadioButton Grid.Column="1"
                                 GroupName="ReemplazoFiltroAceite"
                                 Value="true"
                                 CheckedChanged="Radio_CheckedChanged"
                                 HorizontalOptions="Center"/>

                            <RadioButton Grid.Column="2"
                                 Value="false"
                                 GroupName="ReemplazoFiltroAceite"
                                 CheckedChanged="Radio_CheckedChanged"
                                 HorizontalOptions="Center"/>

                        </Grid>

                        <Grid ColumnDefinitions="*,*,*" VerticalOptions="Center" >

                            <Label Grid.Column="0"
                               Text="Filtro Aire de Motor"
                               TextColor="Black"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"
                               FontSize="12"/>

                            <RadioButton Grid.Column="1"
                                 GroupName="ReemplazoFiltroAireMotor"
                                 Value="true"
                                 CheckedChanged="Radio_CheckedChanged"
                                 HorizontalOptions="Center"/>

                            <RadioButton Grid.Column="2"
                                 Value="false"
                                 GroupName="ReemplazoFiltroAireMotor"
                                 CheckedChanged="Radio_CheckedChanged"
                                 HorizontalOptions="Center"/>

                        </Grid>

                        <Grid ColumnDefinitions="*,*,*" VerticalOptions="Center" >

                            <Label Grid.Column="0"
                               Text="Filtro de aire Polen"
                               TextColor="Black"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"
                               FontSize="12"/>

                            <RadioButton Grid.Column="1"
                                 GroupName="ReemplazoFiltroAirePolen"
                                 Value="true"
                                 CheckedChanged="Radio_CheckedChanged"
                                 HorizontalOptions="Center"/>

                            <RadioButton Grid.Column="2"
                                 Value="false"
                                 GroupName="ReemplazoFiltroAirePolen"
                                 CheckedChanged="Radio_CheckedChanged"
                                 HorizontalOptions="Center"/>

                        </Grid>

                        <Label Text="Comentarios sobre las piezas remplazadas del vehiculo"
                                        FontSize="12"
                                        TextColor="#757575"/>
                        <Border BackgroundColor="White"
                                         StrokeThickness=".7"
                                         Stroke="#BDBDBD"
                                         Padding="8"
                                         StrokeShape="RoundRectangle 8">
                            <Editor Text="{Binding ComentariosRefacciones}"
                                        Placeholder="Ej: Al drenar el aceite este presentaba filtracion de agua necesita revision.."
                                        FontSize="14"
                                        AutoSize="TextChanges"
                                        HeightRequest="120" />
                        </Border>


                    </VerticalStackLayout>
                </Frame>
                <!-- Revision de Niveles-->
                <Frame Padding="10"
                   BackgroundColor="White"
                   CornerRadius="10">

                    <VerticalStackLayout Spacing="10">

                        <!-- TÍTULO -->
                        <Label Text="Revision de Niveles"
                           FontSize="15"
                           HorizontalOptions="Center"
                           FontAttributes="Bold"/>

                        <!-- ENCABEZADOS -->
                        <Grid ColumnDefinitions="*,*" VerticalOptions="Center" >

                            <Label Grid.Column="1"
                               Text="Nivel Optimo"
                               TextColor="Green"
                               HorizontalTextAlignment="Center"
                               FontSize="12"/>
                        </Grid>

                        <!--Pregunta-->
                        <Grid ColumnDefinitions="*,*" VerticalOptions="Center" >

                            <Label Grid.Column="0"
                               Text="Aceite de Motor"
                               TextColor="Black"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"
                               FontSize="12"/>
                            <RadioButton Grid.Column="1"
                                 GroupName="NivelAceiteMotor"
                                 Value="true"
                                 CheckedChanged="Radio_CheckedChanged"
                                 HorizontalOptions="Center"/>
                        </Grid>
                        <Grid ColumnDefinitions="*,*" VerticalOptions="Center" >

                            <Label Grid.Column="0"
                               Text="Liquido de Frenos"
                               TextColor="Black"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"
                               FontSize="12"/>

                            <RadioButton Grid.Column="1"
                                 GroupName="NivelLiquidoFrenos"
                                 Value="true"
                                 CheckedChanged="Radio_CheckedChanged"
                                 HorizontalOptions="Center"/>
                        </Grid>

                        <Grid ColumnDefinitions="*,*" VerticalOptions="Center" >

                            <Label Grid.Column="0"
                               Text="Anticongelante"
                               TextColor="Black"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"
                               FontSize="12"/>

                            <RadioButton Grid.Column="1"
                                 GroupName="NivelAnticongelante"
                                 Value="true"
                                 CheckedChanged="Radio_CheckedChanged"
                                 HorizontalOptions="Center"/>
                        </Grid>

                        <Grid ColumnDefinitions="*,*" VerticalOptions="Center" >

                            <Label Grid.Column="0"
                               Text="Deposito de Limpiaparabrisas"
                               TextColor="Black"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"
                               FontSize="12"/>
                            <RadioButton Grid.Column="1"
                                 GroupName="NivelDepositoLimpiaparabrisas"
                                 Value="true"
                                 CheckedChanged="Radio_CheckedChanged"
                                 HorizontalOptions="Center"/>
                        </Grid>

                        <Label Text="Comentarios sobre Niveles del vehiculo"
                                        FontSize="12"
                                        TextColor="#757575"/>
                        <Border BackgroundColor="White"
                                         StrokeThickness=".7"
                                         Stroke="#BDBDBD"
                                         Padding="8"
                                         StrokeShape="RoundRectangle 8">
                            <Editor Text="{Binding ComentariosNiveles}"
                                        Placeholder="Ej: El deposito del limpiaparabrisas tiene una fuga .."
                                        FontSize="14"
                                        AutoSize="TextChanges"
                                        HeightRequest="120" />
                        </Border>
                    </VerticalStackLayout>
                </Frame>
                <!-- Trabajos realizados al vehiculo-->
                <Frame Padding="10"
                   BackgroundColor="White"
                   CornerRadius="10">

                    <VerticalStackLayout Spacing="10">

                        <!-- TÍTULO -->
                        <Label Text="Trabajos realizados al vehiculo"
                           FontSize="15"
                           HorizontalOptions="Center"
                           FontAttributes="Bold"/>

                        <!-- ENCABEZADOS -->
                        <Grid ColumnDefinitions="*,*" VerticalOptions="Center" >

                            <Label Grid.Column="1"
                               Text="Realizado"
                               TextColor="Green"
                               HorizontalTextAlignment="Center"
                               FontSize="12"/>
                        </Grid>

                        <!--Pregunta-->
                        <Grid ColumnDefinitions="*,*" VerticalOptions="Center" >

                            <Label Grid.Column="0"
                               Text="Descristalizacion de Discos/Tambores"
                               TextColor="Black"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"
                               FontSize="12"/>

                            <RadioButton Grid.Column="1"
                                 GroupName="DescristalizacionTamboresDiscos"
                                 Value="true"
                                 CheckedChanged="Radio_CheckedChanged"
                                 HorizontalOptions="Center"/>
                        </Grid>

                        <Grid ColumnDefinitions="*,*" VerticalOptions="Center" >

                            <Label Grid.Column="0"
                               Text="Ajuste de Frenos"
                               TextColor="Black"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"
                               FontSize="12"/>

                            <RadioButton Grid.Column="1"
                                 GroupName="AjusteFrenos"
                                 Value="true"
                                 CheckedChanged="Radio_CheckedChanged"
                                 HorizontalOptions="Center"/>
                        </Grid>

                        <Grid ColumnDefinitions="*,*" VerticalOptions="Center" >

                            <Label Grid.Column="0"
                               Text="Calibracion Presion de Neumaticos"
                               TextColor="Black"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"
                               FontSize="12"/>
                            <RadioButton Grid.Column="1"
                                 GroupName="CalibracionPresionNeumaticos"
                                 Value="true"
                                 CheckedChanged="Radio_CheckedChanged"
                                 HorizontalOptions="Center"/>
                        </Grid>

                        <Grid ColumnDefinitions="*,*" VerticalOptions="Center" >

                            <Label Grid.Column="0"
                               Text="Torqueado de Neumaticos"
                               TextColor="Black"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"
                               FontSize="12"/>
                            <RadioButton Grid.Column="1"
                                 GroupName="TorqueNeumaticos"
                                 Value="true"
                                 CheckedChanged="Radio_CheckedChanged"
                                 HorizontalOptions="Center"/>
                        </Grid>
                        
                        <Label Text="Comentarios sobre Trabajos Realizados al vehiculo"
                                        FontSize="12"
                                        TextColor="#757575"/>
                        <Border BackgroundColor="White"
                                         StrokeThickness=".7"
                                         Stroke="#BDBDBD"
                                         Padding="8"
                                         StrokeShape="RoundRectangle 8">
                            <Editor Text="{Binding ComentariosTrabajos}"
                                        Placeholder="Ej: Faltaban 2 birlos de la rueda frontal derecha .."
                                        FontSize="14"
                                        AutoSize="TextChanges"
                                        HeightRequest="120" />
                        </Border>
                    </VerticalStackLayout>
                </Frame>
                <Label Text="Comentarios Generales sobre el vehiculo"
                                        FontSize="12"
                                        TextColor="#757575"/>
                <Border BackgroundColor="White"
                                         StrokeThickness=".7"
                                         Stroke="#BDBDBD"
                                         Padding="8"
                                         StrokeShape="RoundRectangle 8">
                    <Editor Text="{Binding ComentariosGenerales}"
                                        Placeholder="Ej: Servicio realizado con exito vehiculo en buen estado general.."
                                        FontSize="14"
                                        AutoSize="TextChanges"
                                        HeightRequest="120" />
                </Border>
                <Button Text="💾 Finalizar Servicio"
                    Command="{Binding GuardarCommand}"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    HeightRequest="55"
                    Margin="0,20,0,10"/>
            </VerticalStackLayout>
        </ScrollView>
        
        <!-- Indicador de carga -->
        <Frame IsVisible="{Binding IsLoading}"
           BackgroundColor="#80000000"
           Padding="20"
           CornerRadius="10"
           HorizontalOptions="Center"
           VerticalOptions="Center">
            <VerticalStackLayout Spacing="15">
                <ActivityIndicator IsRunning="{Binding IsLoading}"
                             Color="White"
                             HeightRequest="50"
                             WidthRequest="50"/>
                <Label Text="Guardando checklist..."
                   TextColor="White"
                   FontSize="16"
                   HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Frame>
    </Grid>

</ContentPage>
