<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    NavigationPage.HasNavigationBar="False"
    Shell.NavBarIsVisible="False"
    x:Class="CarslineApp.Views.ChecksList.CheckListGarantia">

    <Grid RowDefinitions="Auto,*">
        <Frame Grid.Row="0" BackgroundColor="#C62828" CornerRadius="5">
            <Grid ColumnDefinitions="*,Auto,Auto">
                <Label Grid.Column="0"
                        Text="Garantia"                     
                        FontSize="20"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        TextColor="White"/>
                <Label Grid.Column="1"
                        Text="ðŸ“‹"
                        FontSize="15"
                        HorizontalOptions="End"
                        TextColor="White"/>
                <Label Grid.Column="2"
                        x:Name="lblOrden"
                        FontSize="15"
                        HorizontalOptions="End"
                        TextColor="White"/>
            </Grid>
        </Frame>
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="15">

                <BoxView HeightRequest="1" BackgroundColor="#333" Margin="0,0"/>

                <Grid ColumnDefinitions="Auto,*">
                    <Label Grid.Column="0"
                           Text="Vehiculo: "
                           TextColor="#C62828"
                           FontAttributes="Bold"
                           FontSize="17"/>
                    <Label Grid.Column="1"
                           x:Name="lblVehiculo"
                           FontAttributes="Bold"
                           FontSize="17"/>
                </Grid>
                <Grid ColumnDefinitions="Auto,*">
                    <Label Grid.Column="0"
                           Text="VIN: "
                           TextColor="#C62828"
                           FontAttributes="Bold"
                           FontSize="17"/>
                    <Label Grid.Column="1"
                           x:Name="lblVIN"
                           FontAttributes="Bold"
                           FontSize="17"/>
                </Grid>

                <BoxView HeightRequest="1" BackgroundColor="#333" Margin="0,5"/>

                <Label x:Name="lblTrabajo"
                       HorizontalOptions="Center"
                   FontSize="18"
                   FontAttributes="Bold"/>


                <Label x:Name="lblindicacionesTrabajo"
                   FontSize="14"/>

                <BoxView HeightRequest="1" BackgroundColor="Transparent" Margin="0,30"/>



                <Frame
                             BackgroundColor="#FFEBEE"
                             Padding="8"
                             HasShadow="False"
                             BorderColor="#D32F2F" 
                             CornerRadius="6">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="ðŸ’¬ Conclusiones de la revisiÃ³n"
                                     FontSize="12"
                                     FontAttributes="Bold"
                                     TextColor="#C62828"/>
                        <Border BackgroundColor="White"
                                     StrokeThickness="1"
                                     Stroke="#BDBDBD"
                                     Padding="8"
                                     StrokeShape="RoundRectangle 6">
                            <Editor x:Name="txtComentarioReparacion"
                                         Placeholder="Describe los motivos por el cual el vehiculo presenta la falla."
                                         FontSize="13"
                                         TextColor="#404040"
                                         AutoSize="TextChanges"
                                         HeightRequest="80"/>
                        </Border>
                    </VerticalStackLayout>
                </Frame>

                <Frame
                             BackgroundColor="#E8F5E9"
                             Padding="8"
                             HasShadow="False"
                             BorderColor="DarkGreen" 
                             CornerRadius="6">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="ðŸ’¬ Reparaciones realizadas para solucionar la falla"
                                     FontSize="12"
                                     FontAttributes="Bold"
                                     TextColor="DarkGreen" />
                        <Border BackgroundColor="White"
                                     StrokeThickness="1"
                                     Stroke="#BDBDBD"
                                     Padding="8"
                                     StrokeShape="RoundRectangle 6">
                            <Editor  x:Name="txtComentarioGeneral"
                                         Placeholder="Describe las reparaciones realizadas al vehiculo"
                                         FontSize="13"
                                         TextColor="#404040"
                                         AutoSize="TextChanges"
                                         HeightRequest="80"/>
                        </Border>
                    </VerticalStackLayout>
                </Frame>


                <Grid ColumnDefinitions="*,*">

                    <Button Grid.Column="0"
                    Text="â¸ï¸ Pausar Trabajo"
                    Clicked="PausarTrabajo_Clicked"
                    BackgroundColor="#E67E22"
                    TextColor="White"/>
                    <Button Grid.Column="1"
                    Text="âœ… Finalizar  Trabajo"
                    Clicked="FinalizarTrabajo_Clicked"
                    BackgroundColor="#2E7D32"
                    TextColor="White"/>

                </Grid>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
