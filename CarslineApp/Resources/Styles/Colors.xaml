<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:CarslineApp.Converters"
    xmlns:sys="clr-namespace:System;assembly=netstandard">

    <!-- CONVERTIDORES -->
    <converters:StringNotEmptyConverter x:Key="StringNotEmptyConverter" />
    <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
    <converters:NotNullConverter x:Key="NotNullConverter" />
    <converters:GreaterThanOneConverter x:Key="GreaterThanOneConverter" />
    <converters:DateTimeToTimeConverter x:Key="DateTimeToTimeConverter" />
    <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
    <!-- COLORES PRINCIPALES -->
    <Color x:Key="Primary">#512BD4</Color>
    <Color x:Key="PrimaryDark">#2B0B98</Color>
    <Color x:Key="PrimaryDarkText">#AC99EA</Color>
    <Color x:Key="Secondary">#DFD8F7</Color>
    <Color x:Key="SecondaryDarkText">#9880E5</Color>
    <Color x:Key="Tertiary">#2B0B98</Color>

    <!-- COLORES DE FONDO -->
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Magenta">#D600AA</Color>
    <Color x:Key="MidnightBlue">#190649</Color>
    <Color x:Key="OffBlack">#1f1f1f</Color>

    <!-- ESCALA DE GRISES -->
    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>

    <!-- COLORES DE TEMA CLARO -->
    <Color x:Key="LightBackground">White</Color>
    <Color x:Key="LightText">Black</Color>
    <Color x:Key="LightSecondaryText">#6E6E6E</Color>

    <!-- COLORES DE TEMA OSCURO -->
    <Color x:Key="DarkBackground">#1f1f1f</Color>
    <Color x:Key="DarkText">White</Color>
    <Color x:Key="DarkSecondaryText">#C8C8C8</Color>

</ResourceDictionary>